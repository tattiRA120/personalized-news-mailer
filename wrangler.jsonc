/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "mail-news-worker",
	"main": "src/index.ts",
	"compatibility_date": "2025-07-09",
	"preview_urls": false,
	"observability": {
		"enabled": true
	},
	"triggers": {
		"crons": [
			"0 13 * * *",
			"0 21 * * *",
			"0 23 * * *"
		]
	},
	"kv_namespaces": [
		{
			"binding": "mail-news-gmail-tokens", // Binding name for Gmail refresh tokens
			"id": "f393b495a80a4d23bd7f2e77450e0027",
			"preview_id": "659a81c09c7d4679956886667d81dccb"
		},
		{
			"binding": "BATCH_CALLBACK_TOKENS", // Binding name for OpenAI Batch API callback tokens
			"id": "df13a4b73ec24a4d99f0b3edb908f8d8",
			"preview_id": "b14431d83cc243ce81e86258abb43903"
		}
	],
	"durable_objects": {
		"bindings": [
			{
				"name": "CLICK_LOGGER", // Binding name for Durable Object
				"class_name": "ClickLogger"
			},
			{
				"name": "BATCH_QUEUE_DO", // Binding name for Batch Queue Durable Object
				"class_name": "BatchQueueDO"
			},
			{
				"name": "WASM_DO", // Binding name for WASM Durable Object
				"class_name": "WasmDO"
			}
		]
	},
	"migrations": [
		{
			"tag": "v1",
			"new_sqlite_classes": [
				"ClickLogger",
				"BatchQueueDO"
			]
		},
		{
			"tag": "v2",
			"new_sqlite_classes": [
				"WasmDO"
			]
		}
	],
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "mail-news-articles-db",
			"database_id": "e27bfda7-000c-4d9d-9a3e-b147cbe1b2dc",
			"preview_database_id": "dd61f345-bea6-453e-86d4-a3b8ac08d196",
			"migrations_dir": "./migrations"
		}
	],
	"r2_buckets": [
		{
			"binding": "BANDIT_MODELS",
			"bucket_name": "mail-news-bandit-models",
			"preview_bucket_name": "mail-news-bandit-models-preview"
		}
	],
	/**
	 * Sart Pacment
	 * Docsmehttps://devetopers.coudflre.coworers/confiurato/smrt-pcement/#art-plceent
	 */
	// "placement": { "mode": "smart" },"placement": { "mode": "smart" },
	/**
	 * Bindings
	 * Bindings allow your Worker to interact with resources on the Cloudflare Developer Platform, including
	 * databases, object storage, AI inference, real-time communication and more.
	 * https://developers.cloudflare.com/workers/runtime-apis/bindings/
	 */
	/**
	 * Environment Variables
	 * https://developers.cloudflare.com/workers/wrangler/configuration/#environment-variables
	 */
	// "vars": { "MY_VARIABLE": "production_value" },
	/**
	 * Note: Use secrets to store sensitive data.
	 * https://developers.cloudflare.com/workers/configuration/secrets/
	 */
	/**
	 * Static Assets
	 * https://developers.cloudflare.com/workers/static-assets/binding/
	 */
	"assets": {
		"directory": "./public/",
		"binding": "ASSETS"
	},
	"env": {
		"production": {
			// Environment configuration for production (allows 'wrangler dev --env production')
			// Currently explicit inheritance is needed for bindings
			"kv_namespaces": [
				{
					"binding": "mail-news-gmail-tokens",
					"id": "f393b495a80a4d23bd7f2e77450e0027",
					// "preview_id" is automatically ignored in production env, but explicit ID is safer
				},
				{
					"binding": "BATCH_CALLBACK_TOKENS",
					"id": "df13a4b73ec24a4d99f0b3edb908f8d8"
				}
			],
			"durable_objects": {
				"bindings": [
					{
						"name": "CLICK_LOGGER",
						"class_name": "ClickLogger"
					},
					{
						"name": "BATCH_QUEUE_DO",
						"class_name": "BatchQueueDO"
					},
					{
						"name": "WASM_DO",
						"class_name": "WasmDO"
					}
				]
			},
			"d1_databases": [
				{
					"binding": "DB",
					"database_name": "mail-news-articles-db",
					"database_id": "e27bfda7-000c-4d9d-9a3e-b147cbe1b2dc"
				}
			],
			"r2_buckets": [
				{
					"binding": "BANDIT_MODELS",
					"bucket_name": "mail-news-bandit-models"
				}
			]
		}
	},
	/**
	 * Service Bindings (communicate between multiple Workers)
	 * https://developers.cloudflare.com/workers/wrangler/configuration/#service-bindings
	 */
	// "services": [{ "binding": "MY_SERVICE", "service": "my-service" }]
}