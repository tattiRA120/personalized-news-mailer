/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "mail-news-worker",
	"main": "src/index.ts",
	"compatibility_date": "2025-05-14",
	"observability": {
		"enabled": true
	},
	"triggers": {
		"crons": [
			"0 22 * * *",
			"0 8 * * *"
		],
		"http_routes": [
			{
				"pattern": "/openai-batch-callback",
				"method": "POST"
			}
		]
	},

	"kv_namespaces": [
		{
			"binding": "mail-news-user-profiles",
			"id": "36b95e68aa684faf98d02edc9ee44eb4" // TODO: Replace with your actual KV Namespace ID
		},
		{
			"binding": "mail-news-gmail-tokens", // Binding name for Gmail refresh tokens
			"id": "f393b495a80a4d23bd7f2e77450e0027" // TODO: Replace with your actual KV Namespace ID for Gmail tokens
		},
		{
			"binding": "ARTICLE_EMBEDDINGS",
			"id": "ef51fc8f1e594207a18b413264fa5d5f"
		},
		{
			"binding": "CATEGORY_KEYWORDS_KV",
			"id": "972a97b318b746e5892e259204f8b7ca"
		},
		{
			"binding": "CATEGORY_LIST_KV",
			"id": "a97de6adb673408c88489bd0671c8ed9" // TODO: Replace with your actual KV Namespace ID for category list
		}
	],

	"durable_objects": {
		"bindings": [
			{
				"name": "CLICK_LOGGER", // Binding name for Durable Object
				"class_name": "ClickLogger" // TODO: Replace with your actual Durable Object class name
			}
		]
	},

	"migrations": [
		{
			"tag": "v1",
			"new_sqlite_classes": [
				"ClickLogger"
			]
		}
	],

	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "mail-news-articles-db",
			"database_id": "bd19a6ea-8a5a-4fc5-8996-d95e219e94cb"
		}
	],

	"r2_buckets": [
		{
			"binding": "BANDIT_MODELS",
			"bucket_name": "mail-news-bandit-models"
		}
	],

	/**
	 * Smart Placement
	 * Docs: https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
	 */
	// "placement": { "mode": "smart" },

	/**
	 * Bindings
	 * Bindings allow your Worker to interact with resources on the Cloudflare Developer Platform, including
	 * databases, object storage, AI inference, real-time communication and more.
	 * https://developers.cloudflare.com/workers/runtime-apis/bindings/
	 */
	"ai": {
		"binding": "AI"
	},

	/**
	 * Environment Variables
	 * https://developers.cloudflare.com/workers/wrangler/configuration/#environment-variables
	 */
	// "vars": { "MY_VARIABLE": "production_value" },
	/**
	 * Note: Use secrets to store sensitive data.
	 * https://developers.cloudflare.com/workers/configuration/secrets/
	 */

	/**
	 * Static Assets
	 * https://developers.cloudflare.com/workers/static-assets/binding/
	 */
	"assets": { "directory": "./public/", "binding": "ASSETS" },

	/**
	 * Service Bindings (communicate between multiple Workers)
	 * https://developers.cloudflare.com/workers/wrangler/configuration/#service-bindings
	 */
	// "services": [{ "binding": "MY_SERVICE", "service": "my-service" }]
}
